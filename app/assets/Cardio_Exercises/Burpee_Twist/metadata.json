{
    "title": "Burpee Twist",
    "description": "A cardio exercise.",
    "difficulty": "Beginner",
    "content": [
        {
            "type": "section",
            "title": "Instructions",
            "content": {
                "type": "steps",
                "items": [
                    "Start in a standing position with your feet shoulder-width apart.",
                    "Squat down and place your hands on the ground in front of you.",
                    "Jump your feet back into a plank position.",
                    "Do a push-up.",
                    "Jump your feet back to the starting position.",
                    "Jump up and twist your body to the left, bringing your right knee up to your left elbow.",
                    "Jump back to the starting position.",
                    "Jump up and twist your body to the right, bringing your left knee up to your right elbow.",
                    "Jump back to the starting position and repeat the exercise for the desired number of reps."
                ]
            }
        },
