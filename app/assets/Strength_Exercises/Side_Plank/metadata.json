{
    "title": "Side Plank",
    "description": "A strength exercise.",
    "difficulty": "Beginner",
    "content": [
        {
            "type": "section",
            "title": "Instructions",
            "content": {
                "type": "steps",
                "items": [
                    "Start by lying on your side with your legs straight and your elbow directly under your shoulder.",
                    "Lift your hips off the ground, creating a straight line from your head to your feet.",
                    "Hold this position for 30 seconds to 1 minute, or as long as you can maintain good form.",
                    "Lower your hips back down to the ground and repeat on the other side.",
                    "Complete 3-5 sets on each side."
                ]
            }
        },
        {
            "type": "section",
            "title": "Benefits",
            "content": {
                "type": "list",
                "items": [
                    "Strengthens the oblique muscles",
                    "Improves core stability",
                    "Increases hip and glute strength",
                    "Improves balance and coordination",
                    "Can help prevent lower back pain"
                ]
            }
        },
        {
            "type": "section",
            "title": "Primary Muscles",
            "content": {
                "type": "list",
                "items": [
                    "Obliques",
                    "Transverse Abdominis",
                    "Gluteus Medius",
                    "Quadratus Lumborum"
                ]
            }
        },
        {
            "type": "section",
            "title": "Variations",
            "content": {
                "type": "list",
                "items": [
                    "side-plank with leg lift",
                    "side-plank with hip dip",
                    "side-plank with reach under",
                    "side-plank with arm raise",
                    "side-plank with knee tuck"
                ]
            }
        }
    ]
}