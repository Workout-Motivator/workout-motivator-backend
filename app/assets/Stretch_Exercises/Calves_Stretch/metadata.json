{
    "title": "Calves Stretch",
    "description": "A stretch exercise.",
    "difficulty": "Beginner",
    "content": [
        {
            "type": "section",
            "title": "Instructions",
            "content": {
                "type": "steps",
                "items": [
                    "Stand facing a wall with your hands on the wall at shoulder height.",
                    "Step back with one foot, keeping your heel on the ground.",
                    "Bend your front knee and lean towards the wall, keeping your back leg straight.",
                    "You should feel a stretch in your calf muscle.",
                    "Hold the stretch for 15-30 seconds.",
                    "Switch legs and repeat the stretch."
                ]
            }
        },
        {
            "type": "section",
            "title": "Benefits",
            "content": {
                "type": "list",
                "items": [
                    "Improves flexibility and range of motion in the calves",
                    "Reduces the risk of injury in the lower legs and feet",
                    "Relieves tension and tightness in the calves",
                    "Can help alleviate plantar fasciitis and other foot conditions",
                    "May improve overall posture and balance"
                ]
            }
        },
        {
            "type": "section",
            "title": "Primary Muscles",
            "content": {
                "type": "list",
                "items": [
                    "Gastrocnemius",
                    "Soleus"
                ]
            }
        },
        {
            "type": "section",
            "title": "Variations",
            "content": {
                "type": "list",
                "items": [
                    "Standing calf stretch",
                    "Seated calf stretch",
                    "Wall calf stretch",
                    "Stair calf stretch",
                    "Toe raise calf stretch"
                ]
            }
        }
    ]
}